scriptencoding utf-8
"---%<---------------------------------------------------------------------------------------------------------------------------
" => key mappings
"--------------------------------------------------------------------------------------------------------------------------------
noremap <C-A-l> :call FormatCode()<cr>
nmap <F2> :set relativenumber!<cr>
nmap <F3> :set wrap!<cr>
nmap <F9> :checktime<cr>
nmap <C-\> :VimFiler<cr>

nmap <c-b> :CtrlPBuffer<cr>
nmap <c-m> :CtrlPMRU<cr>

" deoplete 
"inoremap <C-Space> <c-x><c-o>
inoremap <C-@> <c-x><c-o>

"---%<---------------------------------------------------------------------------------------------------------------------------
" => system clipboard
"--------------------------------------------------------------------------------------------------------------------------------
vmap <C-c> "+yi
vmap <C-x> "+c
vmap <C-v> c<ESC>"+p
imap <C-v> <ESC>"+pa

"---%<---------------------------------------------------------------------------------------------------------------------------
" => search / replace
"--------------------------------------------------------------------------------------------------------------------------------
vnoremap <C-r> "hy:%s/<C-r>h/<C-r>h/gcI<left><left><left>

noremap <C-A-l> :Neoformat<cr>

"---%<---------------------------------------------------------------------------------------------------------------------------
" => ctrlp 
"--------------------------------------------------------------------------------------------------------------------------------
let g:ctrlp_map = '<c-p>'

let g:ctrlp_prompt_mappings = {
      \ 'MarkToOpen()':['<c-space>'],
      \ 'OpenMulti()' :['<c-enter>'],
      \ }

