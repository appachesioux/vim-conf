"===============================================================================================================================================
for b in bundles
    if !isdirectory(expand(b[2]))
        echomsg 'installing -> ' . b[1]

        call system(shellescape(b[0]).' clone '.shellescape(b[1]).' '.shellescape(expand(b[2])))
    else 
        "echomsg 'verifying -> ' . b[1]
    endif

    exec 'set rtp+='.fnameescape(b[2])

    if isdirectory(b[2].'/doc')
        helptags `=b[2].'/doc'`
    endif

endfor


